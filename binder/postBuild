#!/bin/bash
jupyter serverextension enable --py scriptedforms
jupyter notebook --generate-config

echo "c.NotebookApp.default_url = '/scriptedforms/detailed.md'" >> ~/.jupyter/jupyter_notebook_config.py

echo "import os" >> ~/.jupyter/jupyter_notebook_config.py
echo "os.environ['JUPYTER_CONFIG_DIR'] = '/home/jovyan/.jupyter'" >> ~/.jupyter/jupyter_notebook_config.py
echo "c.Spawner.env_keep.append('JUPYTER_CONFIG_DIR')" >> ~/.jupyter/jupyter_notebook_config.py